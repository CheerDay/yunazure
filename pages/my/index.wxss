@import "/template/login/index.wxss";

page,view,image,input {
  display: block;
  box-sizing: border-box;
}

.container{
  min-height: 100%;
  overflow: hidden;
  overflow-y: hidden;
}

.userinfo {
	display: flex;
	flex-direction: row;
	align-items: center;
  width: 600rpx;
  height: 100rpx;
  margin-top: 20rpx;
  padding-left:5rpx;
}
.userinfo-avatar {
	width: 90rpx;
  height: 90rpx;
  border: 1rpx solid rgb(186, 181, 181);
  border-radius: 50%;
  /* border:solid; */
}
.userinfo .we{
  display: flex;
  width: fit-content;
  margin-left: 35rpx;
  border: transparent;
  text-align: center;
  font-size:28rpx;
  font: bold;
}
.userinfo-nickname {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  font-size: 14px;
}
.list-box{
  display: flex;
  width: 750rpx;
  height: 100rpx;
  flex-direction: row;
  align-items: center;
  border-bottom: 0.5rpx #f0f0f0 solid;
}
.list-image{
  margin-left: 30rpx;
  width: 45rpx;
  height: 45rpx;
  align-items: center;
}
.list-text{
  margin-left: 30rpx;
  font-size: 28rpx;
  font-family:"Microsoft Yahei";
  width: 570rpx;
  height: 50rpx;
  align-items: center;
}
.list-in{
  width: 45rpx;
  height: 45rpx;
  align-items: center;
  margin-right: 10rpx;
}
.space{
  height: 100rpx;
}
.logout-btn{
  width: 680rpx;
  /* height: 80rpx; */
  /* justify-items: center; */
  border-radius: 0%;
  text-align: center;
}
