.mt3 {
  margin-top: 3vh;
}
.warp {
  height: 100vh;
  width: 100vw;
  top: 0;
  left: 0;
  overflow: hidden;
}
.bgImg {
  width: 100vw;
  height: 100vh;
  line-height: 0;
  position: absolute;
  top: 0;
  left: 0;
}
.content {
  width: 100vw;
  height: 100vh;
  position: absolute;
  top: 0;
  left: 0;
}
/*顶部按钮栏*/
.top-wrap {
  width: 100vw;
  height: 10vh;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 5vw;
  box-sizing: border-box;
}
.top-gender {
  width: 25vh;
  height: 5vh;
  display: flex;
}
.position-wrap {
  display: flex;
  width: 30vw;
  justify-content: center;
}
.position-item {
  padding: 0.3vw 1vw;
  margin: 0 2vw;
  font-size: 16px;
  border-radius: 3px;
}
.buttonActivity {
  border: 1px solid #19a9b5;
  color: #19a9b5;
}
.card-wrap {
  width: 25vh;
  height: 5vh;
  display: flex;
  justify-content: flex-end;
}
.card-button {
  width: 5vh;
  height: 5vh;
  border-radius: 50%;
  background: #19a9b5;
  display: flex;
  justify-content: center;
  align-items: center;
}
/*中间 canvas*/
.main-wrap {
  position: relative;
  width: 100vw;
  height: 50vh;
}
.main-socks-img {
  width: 90vw;
  height: 50vh;
  margin: 0 5vw;
}
.canvas-wrap {
  position: absolute;
  top: 0;
  width: 100vw;
  height: 50vh;
}
.mainCanvas {
  overflow: hidden;
  position: absolute;
  width: 90vw;
  height: 30vh;
  margin: 10vh 5vw;
  left: 0;
  top: 0;
  z-index: 99999;
}
.tempCanvas {
  width: 90vw;
  height: 50vh;
  overflow: hidden;
  position: fixed;
  left: 500vw;
  top: 0;
}
.material-wrap {
  position: absolute;
  bottom: 0rpx;
  width: 100vw;
  height: 10vh;
  background:rgb(141, 141, 141);
  box-sizing: border-box;
  padding: 1vh 2vh;
  margin-top: 5rpx;
}
.custom-title {
  position: absolute;
  bottom:  10.1vh;
  width: 100vw;
  height: 5vh;
  font-size: 12px;
  background-color: rgb(141, 141, 141);
}
.category {
  border-radius: 2px;
  margin-left: 3vw;
  margin-top: 1vh;
  padding: 2px 4px;
  width: fit-content;
  color: #fff;
  border: 1px solid #fff; 
  display: inline-block;
}
.categoryActivity {
  border: 1px solid #19a9b5;
  color: #19a9b5;
}
.material-item {
  flex-shrink: 0;
  border: 1px solid #19a9b5;
  margin-right: 2vh;
  width: 8vh;
  height: 8vh;
  display: block;
  background: #fff;
  display: inline-block;
}
.footer {
  margin-left:650rpx;
  width: 100vw;
  height: 25vh;
  padding: 2.5vw;
  box-sizing: border-box;
}
.colorAndOperate {
  width: 100%;
  height: 17.5vh;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}
.color-item {
  width: 5vh;
  height: 5vh;
  border-radius: 50%;
  box-sizing: border-box;
  font-size: 12px;
  margin: 1vh 0;
  color: #19a9b5;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 0 1px 1px #ccc;
}
.color-grey {
  background: #cecac8;
}
.color-white {
  background: #fff;
}
.colorActivity {
  box-shadow: none;
  border: 2px solid #19a9b5;
}
.operation-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 12px;
  color: #333;
}
.operation-img {
  width: 3vh;
  height: 3vh;
  margin-bottom: 1vh;
}
/*上传图片-文字*/
.upload-wrap {
  width: 100%;
  height: 5vh;
  line-height: 5vh;
  font-size: 12px;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.upload-text {
  flex-shrink: 0;
  padding: 0 15px;
}
.upload-line {
  height: 2px;
  width: 50%;
  background: #ccc;
}
.upload-btn-wrap {
  display: flex;
  width: 100%;
  height: 15vh;
  justify-content: space-between;
  align-items: center;
}
.upload-btn {
  width: 10vh;
  height: 10vh;
  border-radius: 50%;
  background: #19a9b5;
  display: flex;
  justify-content: center;
  align-items: center;
}
.upload-btn-img {
  width: 5vh;
  height: 5vh;
}
.label {
  width: 25vw;
  height: 7vh;
}

