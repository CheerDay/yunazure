<!--pages/DIY/index.wxml-->
<!-- 图片展示框 -->
<view class="background" >
  <view class="imgBox">
    <image class="Preview"></image>
  </view>
  <view class="title">
    <scroll-view class="scroll-title" scroll-x="true" > 
      <view  class="itm" wx:for="{{title}}" wx:key="*this" >{{item}}</view>
    </scroll-view>
  </view>
  <view class="inner">
    <scroll-view class="scroll-title" scroll-x="true" > 
      <view  class="itm" wx:for="{{inner}}" wx:key="*this" >{{item}}</view>
    </scroll-view>
  </view>
</view>
