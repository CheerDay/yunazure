 <view style='display: flex;justify-content: center;align-items: center;flex-direction: column;'>
    <view class="uIntre" wx:for="{{goods}}" wx:key="id" data-id="{{item.good_id}}" >
      <view class="imag-box" style="height: 400rpx;width:650rpx">
        <image class="scroll-view-imag" src="{{item.pic}}" mode="scaleToFill" lazy-load="true" ></image>
        <!-- <image class="star" catchtap="addFav" src="{{item.fav?'/images/staryes.png':'/images/starno.png'}}" data-index="{{index}}" data-id="{{item.good_id}}"></image> -->
      </view>
      <!-- <view style="margin:10rpx 25rpx;width:250rpx">
        <image class="packge" src="/images/packge.png" style="width:32rpx;height:32rpx;margin:0rpx 0rpx 0rpx 220rpx "  catchtap="showUp" data-index="{{index}}"></image>
      </view> -->
      <view class="detail-box">
        <view style="color:gray ; width:250rpx;margin-left:10rpx ">{{item.name}}</view>
        <view class="customize" bindtap="upview"  data-id="{{item.good_id}}">
          定制
        </view>
      </view>
      <!-- <view style="color:gray;margin:0rpx 45rpx 5rpx 25rpx;display:flex;flex-direction:row;">
        <view wx:if="{{item.originalPrice && item.originalPrice > 0}}" style='color:#aaa;text-decoration:line-through;width:fit-content;margin-right:20rpx;'>¥ {{item.originalPrice}}</view>
        ￥{{item.minPrice}}
      </view> -->
    </view>
  </view>
<!-- popup-up -->
<view class="popup-box" hidden="{{hideShopPopup}}" catchtouchmove="true">
   <view class="popup-mask" bindtap="closePopupTap">
    <view class="popup-contents">
      <view class="goodInfo">
        <image class="goodImage" src="/images/my/checkNo.png"></image>
        <view class="goodName">帽子</view>
      </view>
      <view class="choseFabric">
        <view class="title">面料</view>
        <text class="inner">针织</text>
      </view>
      <view class="choseFabric">
        <view class="title">尺寸</view>
        <text class="inner">ONE SIZE</text>
      </view>
      <view class="choseFabric">
        <view class="title">颜色</view>
        <text class="inner" wx:for="{{goodsColor}}" wx:key="*this" >{{item}}</text>
      </view>
      <view class="spaceLine"></view>
      <view class="toCustomize" bindtap="toCostpmize">
        <text>前往定制</text>
      </view>
    </view>
   </view>
</view>