.ad{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.adImag{
  width: 700rpx;
  height: 420rpx;
}
.step{
  margin-top: 40rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-around;
  flex-direction: row;
  white-space: nowrap;
}
.stepImag{
  width: 115rpx;
  height: 155rpx;
}
.uIntre{
  white-space: nowrap;
  display: inline-block;
  width: 650rpx;
  height: 820rpx;
  /* border: #e0e0e0 1rpx solid; */
  font-size: 25rpx;
  box-shadow: rgb(189, 189, 189) 5rpx 5rpx 5rpx 5rpx;
  border-radius: 20rpx;
  margin-top: 50rpx;
}
.scroll-view-imag{
  position: relative;
  z-index: 0;
  width: 100%;
  height: 650rpx;
}
.star{
  width: 35rpx;
  height: 35rpx;
  position: absolute;
  margin-top: 10rpx;
  margin-left: -45rpx;
  z-index: 2;
  border-radius: 50rpx 50rpx;
  background-color: #fff;
}
.packge{
  height: max-content;
  /* z-index: 999; */
}
.detail-box{
  position: relative;
  bottom: 0rpx;
  height: 170rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.customize{
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  background-color: rgb(201, 201, 201);
  font-size: 25rpx;
  font-weight: 800;
  border-radius: 30rpx;
  text-align: center;
}

/* popup */
.popup-box{
  position: fixed;
  top: 0;
  left: 0;
  width:100%;
  height: 100%;
  z-index: 999;
}
.popup-mask{
  position: fixed;
  top: 0;
  left: 0;
  width:100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 5;
}
.popup-contents{
  position: fixed;
  left: 0;
  bottom: 0;
  width:100%;
  background-color: #fff;
  z-index: 6;
}
.goodInfo{
  display: flex;
  flex-direction: row;
  width: 100vw;
  height: 200rpx;
  /* justify-content: center; */
  align-items: center;
  border-bottom: 4rpx #666 solid;
}
.goodImage{
  position: relative;
  width: 120rpx;
  height: 120rpx;
  left:10vw;
}
.goodName{
  position: relative;
  font-size: 30rpx;
  color: #000000;
  left: 20vw;
}
.title{
  font-size:28rpx;
  color:#000000;
  padding: 30rpx;
}
.inner{
  font-size:26rpx;
  color:#000;
  padding: 14rpx 20rpx;
  border: 1px solid #ddd;
  border-radius: 6rpx;
  margin-left: 20rpx;
}
.spaceLine{
  width: 100%;
  height: 50rpx;
  border-bottom: 2rpx #666 solid;
}
.toCustomize{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100rpx;
  color: #fff;
  background-color: #666;
}
.size-label-box .label{
  font-size:26rpx;
  color:#000;
  padding-left: 30rpx;
  padding: 30rpx 0 20rpx 30rpx;
}
.size-label-box .label-item-box{
  display: flex;
  margin-left: 30rpx;
  flex-direction: row;
  flex-wrap:wrap;
}
.size-label-box .label-item{
  font-size:26rpx;
  color:#000;
  padding: 14rpx 20rpx;
  border: 1px solid #ddd;
  border-radius: 6rpx;
  margin: 0 20rpx 20rpx 0;
}
.active{
  font-size:26rpx;
  color: #e64340;
  padding: 14rpx 20rpx;
  border: 1px solid #e64340;
  border-radius: 6rpx;
  margin: 0 20rpx 20rpx 0;
}