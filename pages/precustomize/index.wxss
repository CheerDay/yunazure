.uIntre{
  white-space: nowrap;
  display: inline-block;
  width: 650rpx;
  height: 720rpx;
  /* border: #e0e0e0 1rpx solid; */
  font-size: 25rpx;
  box-shadow: rgb(189, 189, 189) 5rpx 5rpx 5rpx 5rpx;
  border-radius: 20rpx;
  margin-top: 50rpx;
}
.scroll-view-imag{
  position: relative;
  z-index: 0;
  width: 100%;
  height: 650rpx;
}
.star{
  width: 35rpx;
  height: 35rpx;
  position: absolute;
  margin-top: 10rpx;
  margin-left: -45rpx;
  z-index: 2;
  border-radius: 50rpx 50rpx;
  background-color: #fff;
}
.packge{
  height: max-content;
  /* z-index: 999; */
}
.detail-box{
  position: relative;
  bottom: 0rpx;
  height: 70rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.customize{
  width: 100rpx;
  background-color: khaki;
  border-radius: 30rpx;
  text-align: center;
}

/* popup */
.popup-box{
  position: fixed;
  top: 0;
  left: 0;
  width:100%;
  height: 100%;
  z-index: 999;
}
.popup-mask{
  position: fixed;
  top: 0;
  left: 0;
  width:100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 5;
}
.popup-contents{
  position: fixed;
  left: 0;
  bottom: 0;
  width:100%;
  background-color: #fff;
  z-index: 6;
}
.goodInfo{
  display: flex;
  flex-direction: row;
  width: 100vw;
  height: 200rpx;
  /* justify-content: center; */
  align-items: center;
  border-bottom: 4rpx #666 solid;
}
.goodImage{
  position: relative;
  width: 120rpx;
  height: 120rpx;
  left:10vw;
}
.goodName{
  position: relative;
  font-size: 30rpx;
  color: #000000;
  left: 20vw;
}
.title{
  font-size:28rpx;
  color:#000000;
  padding: 30rpx;
}
.inner{
  font-size:26rpx;
  color:#000;
  padding: 14rpx 20rpx;
  border: 1px solid #ddd;
  border-radius: 6rpx;
  margin-left: 20rpx;
}
.spaceLine{
  width: 100%;
  height: 50rpx;
  border-bottom: 2rpx #666 solid;
}
.toCustomize{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100rpx;
  color: #fff;
  background-color: #666;
}